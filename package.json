{
  "name": "nova-upload-service",
  "version": "0.2.0",
  "description": "Nova Upload Service",
  "author": "Michiel van der Geest <hello@michielvandergeest.com>",
  "contributors": [
    "Uğur Aslan <ugur@uguraslan.net>",
    "Maurits Meester <maurits_meester@comcast.com>"
  ],
  "license": "Apache-2.0",
  "main": "src/server.js",
  "scripts": {
    "--- ▶️ Application Tools ---": "",
    "start": "node src/server.js",
    "start:dev": "NODE_ENV=development nodemon -r ./dotenv.js src/server.js",
    "--- 🧪 Tests ---": "",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage": "c8 npm run test",
    "report": "c8 report",
    "--- 🖌️ Linting ---": "",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "--- 🖼 Docs ---": "",
    "docs:serve": "http-server ./docs -p 7700 -c-1 --open=index.html",
    "docs:merge": "swagger-cli bundle docs/src/openapi.base.yml --outfile docs/dist/openapi.yml --type yaml",
    "docs:dev": "nodemon -e yml -w docs/src --exec 'npm run docs:merge && npm run docs:serve'",
    "--- 🤓 Developer Tools ---": "",
    "seed:demo-data": "node data/mongo/seed.js"
  },
  "nodemonConfig": {
    "ignore": [
      "data/mongo/*.json"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.632.0",
    "@vendia/serverless-express": "^4.10.4",
    "aws-sdk": "^2.1210.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "file-type": "<17.0.0",
    "fs-extra": "^10.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.11.4",
    "mongoose-unique-validator": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^2.10.0",
    "short-unique-id": "^5.0.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.1",
    "c8": "^8.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "globby": "^11.1.0",
    "http-server": "^14.1.1",
    "mongodb-memory-server": "^8.13.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "swagger-cli": "^4.0.4",
    "tap-diff": "^0.1.1",
    "vitest": "^2.1.1"
  }
}
