{
  "name": "ugap-api",
  "version": "0.1.0",
  "description": "uGAP API Service",
  "main": "src/serverless.js",
  "scripts": {
    "start": "node src/server.js",
    "start:dev": "nodemon -r ./dotenv.js src/server.js",
    "test": "mocha -b ./dotenv.js src/tests",
    "test:container": "docker-compose exec  --env MONGODB_DB=ugapApiTest  ugap-api npm run test",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "nodemonConfig": {
    "ignore": [
      "data/mongo/*.json"
    ]
  },
  "dependencies": {
    "@vendia/serverless-express": "^4.10.4",
    "aws-sdk": "^2.1210.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "fs-extra": "^10.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.7",
    "mongoose-unique-validator": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.8.8",
    "supertest": "^6.2.4"
  }
}
