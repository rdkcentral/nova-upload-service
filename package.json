{
  "name": "nova-upload-service",
  "version": "0.1.0",
  "description": "Nova Upload Service",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:dev": "nodemon -r ./dotenv.js src/server.js",
    "test": "node -r ./dotenv.js ./tests/suite.js | node_modules/.bin/tap-diff || true",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "coverage": "c8 npm run test",
    "report": "c8 report",
    "docs:serve": "http-server ./docs -p 7700 -c-1 --open=index.html",
    "docs:merge": "swagger-cli bundle docs/src/openapi.base.yml --outfile docs/openapi.yml --type yaml",
    "docs:dev": "nodemon -e yml -w docs/src --exec 'npm run docs:merge && npm run docs:serve'"
  },
  "nodemonConfig": {
    "ignore": [
      "data/mongo/*.json"
    ]
  },
  "dependencies": {
    "@vendia/serverless-express": "^4.10.4",
    "aws-sdk": "^2.1210.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "file-type": "<17.0.0",
    "fs-extra": "^10.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.11.4",
    "mongoose-unique-validator": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^2.10.0"
  },
  "devDependencies": {
    "c8": "^8.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "globby": "^11.1.0",
    "http-server": "^14.1.1",
    "mongodb-memory-server": "^8.13.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "swagger-cli": "^4.0.4",
    "tap-diff": "^0.1.1",
    "tape": "^5.6.6"
  }
}
